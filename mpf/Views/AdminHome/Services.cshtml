@model mpf.Models.Service

@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Services</h2>

@using (Html.BeginForm("Services", "AdminHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Form</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Profession_id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.Profession_id, (IEnumerable<SelectListItem>)ViewBag.ProfessionId, "-- Select Profession --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Profession_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Services, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Services, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Services, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </div>
                <br />
                <label style="color:red;">@ViewBag.status</label>
            </div>
        </div>
    </div>




    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Services Table</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>Profession_id</th>
                                <th>Services</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Serviceslist)
                            {
                                <tr>
                                    <td>
                                       @item.id
                                    </td>
                                    <td>
                                        @item.Profession_id
                                    </td>
                                    <td>
                                        @item.Services

                                    </td>
                                    <td>  @Html.ActionLink("Edit", "Services", new { id = item.id })</td>
                                    <td>  @Html.ActionLink("Delete", "ServicesDelete", new { id = item.id })</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

