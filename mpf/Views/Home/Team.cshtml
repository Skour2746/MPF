
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="parallax-section single-par" data-scrollax-parent="true">
    <div class="bg par-elem " data-bg="~/Content/MainWebsite/images/bg/30.jpg" data-scrollax="properties: { translateY: '30%' }">
        <img src="~/Content/MainWebsite/images/bg/30.jpg" />
    </div>
    <div class="overlay op7"></div>
    <div class="container">
        <div class="section-title center-align big-title">
            <h2><span>Our Team</span></h2>
            <span class="section-separator"></span>
            <div class="breadcrumbs fl-wrap"><a href="#">Home</a><span>Team</span></div>
        </div>
    </div>
    <div class="header-sec-link">
        <a href="#sec1" class="custom-scroll-link"><i class="fal fa-angle-double-down"></i></a>
    </div>
</section>
<section class="gray-bg small-padding no-top-padding-sec" id="sec1">
    <div class="container">
        <div class="breadcrumbs inline-breadcrumbs fl-wrap block-breadcrumbs">
            <a href="#">Home</a><span>Team</span>
        </div>
        <div class="mob-nav-content-btn  color2-bg show-list-wrap-search ntm fl-wrap"><i class="fal fa-filter"></i>  Filters</div>
        <div class="fl-wrap">
            <div class="row">
                <div class="col-md-4">
                    <div class=" fl-wrap lws_mobile">
                        <!--box-widget-item -->
     
                        <!--box-widget-item end -->

                    </div>
                </div>
                <div class="col-md-12">
                    <!-- list-main-wrap-header-->
                
                    <!-- list-main-wrap-header end-->
                    <!-- listing-item-container -->
                    <div class="listing-item-container init-grid-items fl-wrap nocolumn-lic">
                        <!-- shop-item  -->

                        @foreach (var item in ViewBag.Chairman)
                        {
                            <div class="shop-item" style="width:25%;">
                                <div class="shop-item-media">
                                    <a href="#">
                                        <img src="~/Content/mpfimages/Professional/@item.image" alt="">
                                        <div class="overlay"></div>
                                    </a>
                                    <div class="geodir-category-opt">

                                    </div>
                                </div>
                                <div class="shop-item_title">
                                    <h4><a href="product-single.html" style="font-size:19px;">@item.username , @item.categoryname</a></h4>
                                    <h5><a href="#" style="font-size:16px;float:left;">@item.Post</a></h5>
                                    <a href="@Url.Action("TeamDetail","Home",new { id=item.id})" class="shop-item_link color-bg">Details</a>
                                </div>
                            </div>
                            <!-- shop-item end -->
                        }
                        <div class="pagination fwmpag">
                        </div>
                        <div>

                        </div>
                    </div>
                    <!-- listing-item-container end -->
                </div>

      
            </div>
        </div>
    </div>
</section>
<!--section end-->
<div class="limit-box fl-wrap"></div>
</div>
<!--cart  -->
<div class="show-cart color2-bg"><i class="far fa-shopping-cart"></i><span>3</span></div>
<div class="cart-overlay"></div>
<div class="cart-modal">

    <div class="cart-modal-wrap fl-wrap">
        <span class="close-cart color2-bg">Close <i class="fal fa-times"></i> </span>
